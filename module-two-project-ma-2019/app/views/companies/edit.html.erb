<h1>Edit Form for Account: <%=@company.name%></h1>

<%= form_for :company do |f| %>
  <%=f.label :name, "Company Name:" %><br>
  <%=f.text_field :name %><br>
  <%=f.label :address, "Address:" %><br>
  <%=f.text_field :address %><br>
  <%=f.label :website, "Website:" %><br>
  <%=f.text_field :website %><br>
  <%=f.label :bio, "Briefly tell us about your company:" %><br>
  <%=f.text_area :bio, size: "24x6" %><br>
  <%=f.label :logo, "Please upload your company's logo" %><br>
  <%=f.file_field :logo %><br>
  <%=f.submit "Update Account"%>
<% end %>