<h1>Create New Ad</h1>
<%= form_for (@ad) do |f| %>
    <label>Name:</label>
    <%= f.text_field(:name)%><br>
    <%= f.label(:client_id)%>
    <%= f.collection_select :client_id, Client.all, :id, :name %><br>
    <%= f.label(:ad_type)%>
    <%= f.text_field(:ad_type)%><br>
    <%= f.label(:picture)%>
    <%= f.file_field(:picture)%><br>
    <%= f.label(:location)%>
    <%= f.text_field(:location)%><br>
    <%= f.label(:target_age)%>
    <%= f.text_field(:target_age)%><br>
    <%= f.label(:copy)%>
    <%= f.text_area(:copy)%><br>
    <%= f.label(:duration)%>
    <%= f.text_field(:duration)%><br>
    <%= f.label(:cost)%>
    <%= f.text_field(:cost)%><br>
    <%= f.submit %>
    <% end %>